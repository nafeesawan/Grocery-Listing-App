<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid background color -->
    <solid android:color="#43D249"/>

    <!-- Corner radius for rounded corners -->
    <corners android:radius="10dp"/>

    <!-- Optional: Stroke for border -->
    <stroke
        android:width="1dp"
        android:color="#000000" /> <!-- Black border for visibility -->

    <!-- Optional: Padding inside the shape -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
